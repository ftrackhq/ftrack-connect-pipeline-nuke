{
  "type": "opener",
  "name": "Movie Opener",
  "asset_type": "render",
  "host_type": "nuke",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "common_default_opener_context",
              "widget": "common_default_opener_context"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "snapshot",
      "file_formats": [".nk"],
      "optional": true,
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "Collect components from context",
              "plugin": "common_context_opener_collector"
            }
          ]
        },
        {
          "name": "importer",
          "plugins":[
            {
              "name": "Open Nuke Scene",
              "plugin": "nuke_default_opener_importer"
            }
          ]
        },
        {
          "name": "post_importer",
          "plugins":[
            {
              "name": "nuke",
              "plugin": "common_default_opener_post_importer"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "pre to ftrack server",
              "plugin": "common_default_opener_pre_finalizer"
            }
          ]
        },
        {
          "name": "finalizer",
          "plugins":[
            {
              "name": "Save scene to working directory",
              "plugin": "nuke_default_opener_finalizer"
            }
          ]
        },
        {
          "name": "post_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "post to ftrack server",
              "plugin": "common_default_opener_post_finalizer"
            }
          ]
        }
      ]
    }
  ]
}